<fieldset>
      <legend> Creación de Pregunta </legend>
        <div class="divFloat">
        <label for="preg" class="formu" padding=".2em" >Pregunta:</label>
        <input type="text" id="preg" class="inputstyle" padding=".2em" name="quiz[pregunta]" value="<%= quiz.pregunta %>"/>
        </div>
        <div class="divFloat">
        <br><label for="resp" class="formu">Respuesta:</label>
        <input type="text" class="inputstyle" id="resp" name="quiz[respuesta]" value="<%= quiz.respuesta %>" />
        </div>
        <div><br><p><label for="tema" class="formu">Tema:</label>
        <select name="quiz[tema]" size="1">
          <option value="Otro" selected>Otro</option>
          <option value="Humanidades">Humanidades</option>
          <option value="Ocio">Ocio</option>
          <option value="Ciencia">Ciencia</option>
          <option value="Tecnologia">Tecnología</option>
        </select>
        </div>
        <br><a href="/quizes"><button class="buttonstyle" type="button">Cancelar</button></a>
        <input type="submit" class="inputstyle" value="Salvar">
  </fieldset>
