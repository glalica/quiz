<!-- Formulario de la pregunta -->
<div>
 <div class="divShow">
  <form method="get" action="/quizes/<%= quiz.id %>/answer">
    <label> <%= quiz.pregunta %> </label> <p><br>
    <input type="text" name="respuesta" value="Respuesta" />
    <input type="submit" value="Enviar">
  </form>
  <p>
    <br><a href="/quizes">Volver</a>
  </p>
  </div>

  <div id="divcomentario">
    <p id="pcomentarios"><strong>Comentarios:</strong></p>
    <%for(index in quiz.Comments){%>
      <%if(quiz.Comments[index].publicado || session.user) {%>
        <p>- <%=quiz.Comments[index].texto%>
          <%if (session.user && !quiz.Comments[index].publicado){%>
            <a href="/quizes/<%= quiz.id %>/comments/<%=quiz.Comments[index].id%>/publish">
              <button>Publicar</button></a>
          <%}%>
        </p>
      <%}%>
    <%}%>

    <br><p><a href="/quizes/<%= quiz.id %>/comments/new">
       <button>Nuevo comentario</button></a>
    </p>
  <div>

</div>
