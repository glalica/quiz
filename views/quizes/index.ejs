<div class="Contenedor">
  <div class="Table">
    <div class="Heading">
      <div class="Cell"><p>Temas</p></div>
      <div class="Cell"><p>Preguntas</p></div>
      <div class="Cell"><p>Acciones</p></div>
    </div>
    <% var i; for (i=0; i < quizes.length; i++) { %>
      <div class="Row">
        <div class="Cell"><%= quizes[i].tema %></div>
        <div class="Cell">
          <a href="quizes/<%= quizes[i].id %>"><%= quizes[i].pregunta %></a></div>
        <div class="Cell">
          <div class="acciones">
            <a href="quizes/<%= quizes[i].id %>/edit">
            <button><img class="imgAcciones" src="images/edit.png"></button></a>
          </div>
          <div class="acciones">
            <form method="post" action="quizes/<%= quizes[i].id %>?_method=delete">
            <button type="submit" onClick="return confirm('Borrar:
              <%= quizes[i].pregunta %>');"><img class="imgAcciones" src="images/Delete_icon_96.png">
            </button>
            </form>
          </div>
        </div>
      </div>
    <% } %>
  </div> <!--Table-->

  <div class="divFloat">
    <div>
      <form method="get" action="/quizes?search=texto_a_buscar">
          BÃºsqueda:
          <input type="text" name="search" class="inputstyle" value="Texto a buscar"/>
          <input type="submit" value="Buscar" class="inputstyle">
      </form>
    </div>
    <div>
      <a href="/quizes/new"><button type="button" class="buttonstyle">Crear pregunta</button></a>
    </div>
  </div>

