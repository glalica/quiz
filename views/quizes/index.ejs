<!-- Formulario que muestra las preguntas almacenadas -->
<div>
<div id="caja">
  <table class="rwd_auto">
    <thead>
    <tr>
      <th>Preguntas</th>
      <%if (session.user){%>
        <th><span>Acciones</span></th>
      <%}%>
    </tr>
    </thead>
    <tbody>
      <% var i; for (i=0; i < quizes.length; i++) { %>
      <tr>
        <td><a href="quizes/<%= quizes[i].id %>"><%= quizes[i].pregunta %></a>
        <span> (<%= quizes[i].tema %>) </span>
        </td>
        <%if (session.user){%>
          <td class="tdiconos">
            <a href="quizes/<%= quizes[i].id %>/edit">
              <button><img class="imgAcciones" src="images/edit.png"></button>
            </a>
            <form method="post" action="quizes/<%= quizes[i].id %>?_method=delete">
              <button type="submit" onClick="return confirm('Borrar:
                <%= quizes[i].pregunta %>');"><img class="imgAcciones" src="images/delete.png">
              </button>
            </form>
          </td>
        <%}%>
      </tr>
      <% } %>
    </tbody>
  </table>
</div>

  <div id="caja">
    <div id="acciones">
      <form method="get" action="/quizes?search=texto_a_buscar">
